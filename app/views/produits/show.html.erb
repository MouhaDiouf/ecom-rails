<div class="page-produit container mt-5">
  <div class="row">


    <div class="col-md-6">


      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @produit.images.each_with_index do |image, index| %>
          <div class="carousel-item <%= "active" if index === 0  %>" >
            <%= image_tag(image, class:'d-block w-100')%>
          </div>
      <% end %>
          <!-- <div class="carousel-item active">
            <img class="d-block w-100" src="..." alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Third slide">
          </div> -->
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>




    </div>
    <div class="col-md-6">
      <h2>Détails pour <%= @produit.nom %></h2>
    <p><%=@produit.description %></p>
<div class="détails-vendeur">
  <h3>Détails Vendeur</h3>
  <%= @produit.user.email %>
</div>
    </div>
  </div>

</div>

<div class="container">
  <h2 class="text-center">Produits Similaires</h2>
  <div class="produits-similaires">
    <% @similaires.each do |similaire| %>

      <div  class="produit-similaire card">
        <div class="similaire-image">
          <%= image_tag(similaire.images.first, class: "card-img-top") if similaire.images.attached?%>
        </div>
        <div class="similaire-titre card-body">
          <h3 class="card-title"><%= similaire.nom %></h3>
          <p class="card-text"><%=similaire.description %></p>

        </div>

        <%= link_to "Voir", produit_path(similaire), method: :get, class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
