
<h1 class="text-center">Nouveau Produit</h1>

<div class="container">

<%= form_for(@produit) do |form| %>

<% if @produit.errors.any? %>
  <div id="error_explanation" class="alert alert-success" role="alert">
    <h3 class="alert-heading"><%= pluralize(@produit.errors.count, "erreur") %> on empêché la création de votre produit:</h3>
    <ul>
      <% @produit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form>
  <div class="form-group">
    <%= form.label :nom %>
    <%= form.text_field :nom, class: 'form-control', placeholder: 'Ex: iPhone 12 Pro' %>
  </div>
  <div class="form-group">
  <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control',  rows: 10 %>
  </div>
  <div class="form-group">
  <%= form.label :prix %>
    <%= form.number_field :prix, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= form.label :catégorie %>
    <%= form.select :catégorie, ['téléphonie', 'habillement', 'ordinateurs', 'automobile', 'immobilier'], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <button type="submit" class="btn btn-primary">Créer Produit</button>
</form>
<% end %>

</div>
