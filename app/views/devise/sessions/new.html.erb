<div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 login-section-wrapper">
        <div class="login-wrapper my-auto">
          <h1 class="login-title">Connexion</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">

              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'email@gmail.com' %>
            </div>


            <div class="form-group mb-4">

              <%= f.label :mot_de_passe %><br />
              <%= f.password_field :password, autocomplete: "mot de passe" , class: "form-control", placeholder:"Votre mot de passe"%>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :se_souvenir_de_moi %>
              </div>
            <% end %>
            <%= f.submit "Connexion", class: "btn btn-block login-btn btn-success", id:"login" %>

            <% end %>


          <%= render "devise/shared/links" %>

        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <!-- <img src="assets/images/login.jpg" alt="login image" class="login-img"> -->
        <%= image_tag "dakar.jpeg", class: 'login-img', alt:"login image" %>

        <p class="text-white font-weight-medium text-center flex-grow align-self-end footer-link">
          Free <a href="https://www.bootstrapdash.com/" target="_blank" class="text-white">Bootstrap dashboard templates</a> from Bootstrapdash
        </p>
      </div>
    </div>
  </div>
